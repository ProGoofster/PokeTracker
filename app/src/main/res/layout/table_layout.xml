<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pokémon Tracker"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle TextView -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter Pokémon details"
            android:layout_marginBottom="16dp" />

        <!-- Form Table -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- National Number -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_national_number_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="National Number:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_national_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter national number"
                    android:inputType="number" />
            </TableRow>

            <!-- Name -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Name:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter name"
                    android:inputType="textPersonName" />
            </TableRow>

            <!-- Species -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_species_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Species:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter species"
                    android:inputType="text" />
            </TableRow>

            <!-- Gender -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_gender_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Gender:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:layout_marginEnd="8dp" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:layout_marginEnd="8dp" />

                    <RadioButton
                        android:id="@+id/rb_unknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unk" />
                </RadioGroup>
            </TableRow>

            <!-- Height -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_height_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Height:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter height"
                    android:inputType="numberDecimal" />
            </TableRow>

            <!-- Weight -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_weight_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Weight:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter weight"
                    android:inputType="numberDecimal" />
            </TableRow>

            <!-- Level -->
            <TableRow
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_level_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Level:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter level"
                    android:inputType="number" />
            </TableRow>

        </TableLayout>

        <!-- Stats Title -->
        <TextView
            android:id="@+id/tv_stats_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Stats Table -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginBottom="24dp">

            <!-- HP -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_hp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="HP:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter HP"
                    android:inputType="number" />
            </TableRow>

            <!-- Attack -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_attack_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Attack:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_attack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter attack"
                    android:inputType="number" />
            </TableRow>

            <!-- Defense -->
            <TableRow
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_defense_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="Defense:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_defense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter defense"
                    android:inputType="number" />
            </TableRow>

        </TableLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/reset_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>